<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="android:colorBackground">@color/secondaryColor</item>
        <item name="colorOnBackground">@color/secondaryTextColor</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadline6</item>
    </style>
    <style name="CustomHeadline6" parent="Base.Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
